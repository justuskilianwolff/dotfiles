{
  "permissions": {
    "allow": [
      "Bash(uv:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git revert:*)",
      "Bash(git log:*)",
      "Bash(git diff:*)",
      "Bash(git status:*)",
      "Bash(git checkout:*)",
      "Bash(git show-ref:*)",
      "Bash(git branch:*)",
      "Bash(git tag:*)",
      "Bash(git stash list:*)",
      "Bash(git rev-parse:*)",
      "Bash(git ls-files:*)",
      "Bash(git ls-tree:*)",
      "Bash(git blame:*)",
      "Bash(git shortlog:*)",
      "Bash(git show:*)",
      "Bash(tree:*)",
      "Bash(find:*)",
      "Bash(sed:*)",
      "Bash(cd:*)",
      "Bash(grep:*)",
      "Bash(ls:*)",
      "Bash(cat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(docker:*)",
      "Bash(curl:*)",
      "Bash(jq:*)",
      "Bash(echo:*)",
      "Bash(sort:*)",
      "Bash(wc:*)",
      "mcp__ide__getDiagnostics"
    ],
    "deny": ["Read(./.env)", "Read(./secrets/**)"]
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "curl -s http://host.docker.internal:3456 &"
          }
        ]
      }
    ]
  }
}
