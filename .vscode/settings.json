{
  // editor
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.codeActionsOnSave": {
    "source.organizeImports": "always" // this does not remove unused imports
  },

  // default formatter for specific file types
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml,yml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
  },

  // python
  "python.analysis.typeCheckingMode": "standard",
  "notebook.formatOnCellExecution": true,
  "notebook.formatOnSave.enabled": true,

  // todo tree
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "THINK",
    "BUG",
    "DISCUSS",
    "CHECK",
    "UPDATE",
    "IMPROVE",
    "REMOVE"
  ],

  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "checklist",
      "foreground": "#ffffff",
      "background": "#ffaa00",
      "iconColour": "#ffaa00"
    },
    "FIXME": {
      "icon": "tools",
      "foreground": "#ffffff",
      "background": "#ff0000",
      "iconColour": "#ff0000"
    },
    "THINK": {
      "icon": "light-bulb",
      "foreground": "#ffffff",
      "background": "#9933cc",
      "iconColour": "#9933cc"
    },
    "BUG": {
      "icon": "bug",
      "foreground": "#ffffff",
      "background": "#ee4444",
      "iconColour": "#ee4444"
    },
    "DISCUSS": {
      "icon": "comment-discussion",
      "foreground": "#ffffff",
      "background": "#33aadd",
      "iconColour": "#33aadd"
    },
    "CHECK": {
      "icon": "verified",
      "foreground": "#ffffff",
      "background": "#00cc66",
      "iconColour": "#00cc66"
    },
    "UPDATE": {
      "icon": "sync",
      "foreground": "#ffffff",
      "background": "#3366ff",
      "iconColour": "#3366ff"
    },
    "IMPROVE": {
      "icon": "star",
      "foreground": "#000000",
      "background": "#ffdd33",
      "iconColour": "#ffdd33"
    },
    "REMOVE": {
      "icon": "trash",
      "foreground": "#ffffff",
      "background": "#ff3366",
      "iconColour": "#ff3366"
    }
  }
}
